<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/color_e3e3e3"
                android:endColor="@color/color_e6e6e6"
                android:startColor="@color/color_c8c8c8" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:centerColor="@color/color_4197e7"
                    android:endColor="@color/color_4197e7"
                    android:startColor="@color/color_4197e7" />
            </shape>
        </clip>
    </item>
</layer-list>